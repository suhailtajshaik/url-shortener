{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A URL shortening service with analytics",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "docker:build": "docker build -t url-shortener .",
    "docker:run": "docker run --name url-shortener -d -p 3000:3000 url-shortener",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "url-shortener",
    "node",
    "express",
    "mongodb",
    "analytics"
  ],
  "author": "Suhail Taj Shaik",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.79.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "qrcode": "^1.5.4",
    "shortid": "^2.2.16",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "valid-url": "^1.0.9",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2"
  }
}
